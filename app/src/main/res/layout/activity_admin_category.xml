<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/red"
    android:layout_height="match_parent"

    tools:context=".AdminCategoryActivity">

    <ImageView
        android:id="@+id/a1"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="25dp"

        android:layout_marginEnd="57dp"
        android:src="@drawable/logo_woody" />

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="53dp"
android:layout_marginLeft="60dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/aubrey"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        android:textStyle="bold"

        />

    <LinearLayout
        android:id="@+id/linear_category_layout1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/slogan_category"
        android:layout_marginTop="45dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bed"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:focusable="true"
            android:src="@drawable/bed"
            android:text="bed"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/dining"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:focusable="true"
            android:src="@drawable/dining" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_category_layout2"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/linear_category_layout1"
        android:layout_marginTop="35dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/cupboard"

            android:layout_width="213dp"
            android:layout_height="match_parent"

            android:focusable="true"

            android:src="@drawable/cupboard1" />

        <ImageView
            android:id="@+id/sofa"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:focusable="true"
            android:src="@drawable/sofa" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_category_layout3"
        android:layout_width="match_parent"

        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        android:layout_below="@+id/linear_category_layout2"
        android:layout_marginTop="35dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/door"
            android:layout_width="213dp"
            android:layout_height="match_parent"
            android:focusable="true"
            android:src="@drawable/door" />
        <ImageView
            android:id="@+id/lamp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:focusable="true"
            android:src="@drawable/lamp" />
    </LinearLayout>
    <Button
        android:id="@+id/maintain_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="23dp"
        android:textColor="@android:color/white"
        android:text="Product Editing"
        android:textAllCaps="false"
        android:layout_above="@+id/check_orders_btn"
        android:background="@drawable/cirlcebutton">
    </Button>
    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="23dp"
        android:textColor="@android:color/white"
        android:text="Check New Orders"
        android:textAllCaps="false"
        android:layout_above="@+id/admin_logout_btn"
        android:background="@drawable/cirlcebutton">
    </Button>
<Button
    android:id="@+id/admin_logout_btn"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_alignParentBottom="true"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:textStyle="bold"
    android:textSize="23dp"
    android:textColor="@android:color/white"
    android:text="Logout"
    android:layout_marginBottom="8dp"
    android:textAllCaps="false"
    android:background="@drawable/cirlcebutton">
</Button>




</RelativeLayout>